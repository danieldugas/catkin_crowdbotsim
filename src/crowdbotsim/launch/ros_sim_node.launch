<launch>
    <arg name="rviz" default="true"/>

    <param name ="/use_sim_time" value="true"/>

    <node pkg="crowdbotsim" type="ros_sim_node" output="screen" name="ros_sim_node" args=""/>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find crowdbotsim)/rviz/ros_sim_node.rviz"
        output="log" if="$(arg rviz)"/>
</launch>
